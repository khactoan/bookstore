<div class="col-md-8 col-md-offset-2">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "col-md-5" %>
      <%= f.email_field :email, autofocus: true, class: "col-md-7" %>
    </div>
    <br><br>
    <div class="field">
      <%= f.label :password, class: "col-md-5" %>
      <%= f.password_field :password, autocomplete: "off", class: "col-md-7" %>
    </div>
    <br><br>
    <% if devise_mapping.rememberable? -%>
      <div class="field col-md-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions col-md-7 log_in">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  <br><br>
  <%= render "users/shared/links" %>
</div>
