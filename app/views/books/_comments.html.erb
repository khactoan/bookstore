
      <li class="media">
        <a class="pull-left" href="#">
          <%= image_tag comment.user.avatar, class: "media-object img-circle user_avatar" %>
        </a>
        <div class="media-body">
          <div class="well well-lg">
            <h4 class="media-heading text-uppercase reviews">
              <%= comment.user.name %>
            </h4>
            <ul class="media-date text-uppercase reviews list-inline">
              <li class="dd">
                <%= comment.created_at.strftime Settings.day_only %>
              </li>
              <li class="mm">
                <%= comment.created_at.strftime Settings.month_only %>
              </li>
              <li class="aaaa">
                <%= comment.created_at.strftime Settings.year_only %>
              </li>
            </ul>
            <p class="media-comment">
              <%= comment.content %>
            </p>
            <a class="btn btn-warning btn-circle text-uppercase" data-toggle="collapse" href="#reply-<%= comment.id %>">
              <span class="glyphicon glyphicon-comment"></span>
              <%= load_reply(comment).size %> <%= t "replies" %>
            </a>
            <%= link_to comment_path(comment),
              class: "btn btn-danger btn-circle text-uppercase",
              method: :delete, remote: true do %>
              <%= t "delete_comment" %>
            <% end %>
          </div>
        </div>
        <div class="collapse" id="reply-<%= comment.id %>">
          <ul class="media-list">
            <% load_reply(comment).each do |reply| %>
            <li class="media media-replied">
              <%= link_to "#", class: "pull-left" do %>
              <%= image_tag comment.user.avatar,
                class: "media-object img-circle user_avatar" %>
              <% end %>
              <div class="media-body">
                <div class="well well-lg">
                  <h4 class="media-heading text-uppercase reviews">
                    <span class="glyphicon glyphicon-share-alt"></span>
                    <%= reply.user.name %>
                  </h4>
                  <ul class="media-date text-uppercase reviews list-inline">
                    <li class="dd"><%= reply.created_at.strftime Settings.day_only %></li>
                    <li class="mm"><%= reply.created_at.strftime Settings.month_only %></li>
                    <li class="aaaa"><%= reply.created_at.strftime Settings.year_only %></li>
                  </ul>
                  <p class="media-comment">
                    <%= reply.content %>
                  </p>
                </div>
              </div>
            </li>
            <% end %>
            <% if user_signed_in? %>
              <li class="media media-replied">
                <%= link_to "#", class: "pull-left" do %>
                <%= image_tag current_user.avatar,
                  class: "media-object img-circle user_avatar" %>
                <% end %>
                <div class="media-body">
                  <%= form_for Comment.new, :remote => true do |f| %>
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="form-group">
                          <%= f.hidden_field :book_id, :value => @book.id %>
                          <%= f.hidden_field :user_id,
                            :value => current_user.id %>
                          <%= f.hidden_field :parent_id, :value => comment.id %>
                          <%= f.text_area :content, class: "form-control",
                            rows: Settings.textarea.number_rows %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-12 text-right">
                        <%= f.button :submit, class: "btn btn-template-main" do %>
                          <i class="fa fa-comment-o"></i>
                          <%= t "post_comment" %>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </li>

