<li class="media">
  <%= link_to "#", class: "pull-left" do %>
    <%= image_tag comment.user.avatar, class: "media-object img-circle
      user_avatar" %>
  <% end %>
  <div class="media-body">
    <div class="well well-lg">
      <h4 class="media-heading text-uppercase reviews">
        <%= comment.user.name %>
      </h4>
      <ul class="media-date text-uppercase reviews list-inline">
        <li class="time_with_hour">
          <%= comment.created_at.strftime Settings.format_time_with_hour %>
        </li>
      </ul>
      <p class="media-comment">
        <%= comment.content %>
      </p>
      <%= link_to "#reply-#{comment.id}", class: "btn btn-warning btn-circle text-uppercase",
        data: {toggle: "collapse"} do %>
        <span class="glyphicon glyphicon-comment"></span>
        <%= load_reply(comment).size %> <%= t "replies" %>
      <% end %>
      <%= link_to comment_path(comment),
        class: "btn btn-danger btn-circle text-uppercase",
        method: :delete, remote: true do %>
        <%= t "delete_comment" %>
      <% end %>
    </div>
  </div>
  <div class="collapse" id="reply-<%= comment.id %>">
    <ul class="media-list">
      <%= render partial: "replies", collection: load_reply(comment),
        as: :reply %>
      <% if user_signed_in? %>
        <li class="media media-replied">
          <%= link_to "#", class: "pull-left" do %>
          <%= image_tag current_user.avatar,
            class: "media-object img-circle user_avatar" %>
          <% end %>
          <div class="media-body">
            <form>
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group">
                    <textarea class="form-control" id="comment"
                      rows="<%= Settings.textarea.number_rows %>">
                    </textarea>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 text-right">
                  <button class="btn btn-template-main">
                    <i class="fa fa-comment-o"></i>
                    <%= t "reply" %>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</li>
